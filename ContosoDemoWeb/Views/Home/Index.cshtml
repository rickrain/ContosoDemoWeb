@model List<Models.Library.Picture>
@{
    ViewBag.Title = "Home Page";
}
<h2>Pictures</h2>
<div class="row">
    <div class="col-md-12">
        @if (Model.Count > 0)
        {
            foreach (var picture in Model)
            {
                <div style="height:100px; padding:10px" class="col-md-2">
                    <img alt="@picture.Name" src="@picture.PictureUrl" style="height:100%" />
                </div>
            }
        }
        else
        {
            <p><em>No pictures found.</em></p>
        }
    </div>
</div>